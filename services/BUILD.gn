    "//base/useriam/pin_auth/services/sa/inc",
    "//base/useriam/pin_auth/services/modules/driver/inc",
    "//base/useriam/pin_auth/services/modules/executors/inc",
    "//base/useriam/pin_auth/services/modules/inputters/inc",
    "//base/useriam/user_auth_framework/common/logs",
    "//base/useriam/user_auth_framework/common/utils",
    "//base/security/access_token/interfaces/innerkits/accesstoken/include",
  ]
