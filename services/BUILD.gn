ohos_shared_library("pinauthservice") {
  sources = [
    "//base/useriam/pin_auth/services/modules/driver/src/pinauth_driver_hdi.cpp",
    "//base/useriam/pin_auth/services/modules/executors/src/pinauth_executor_callback_hdi.cpp",
