    "//base/useriam/pin_auth/services/sa/src/pin_auth_service.cpp",
  ]

  configs = [ ":pin_auth_services_config" ]

  deps = [
    "//base/security/access_token/interfaces/innerkits/accesstoken:libaccesstoken_sdk",
    "//base/useriam/pin_auth/frameworks:pinauth_framework",
    "//base/useriam/user_auth_framework/common/executors:userauth_executors",
    "//third_party/openssl:libcrypto_static",
  ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_pin_auth:libpin_auth_proxy_1.0",
    "hdf_core:libhdf_utils",
    "hisysevent_native:libhisysevent",
    "hiviewdfx_hilog_native:libhilog",
    "init:libbeget_proxy",
    "init:libbegetutil",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr_standard:samgr_proxy",
